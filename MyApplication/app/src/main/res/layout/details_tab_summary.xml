<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView

        android:layout_height="286dp"
        android:layout_width="0dp"
        android:layout_marginBottom="443dp"
        android:id="@+id/url"
        android:scaleType="centerCrop"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />



    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="18dp"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="@id/guideline_droite"
        app:layout_constraintTop_toBottomOf="@+id/url" />



    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="15dp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="@id/guideline_droite"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <ImageView
         android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/name"
        android:src="@drawable/nutri_score_e"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brand" />


    <TextView
        android:id="@+id/barres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="15dp"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="@id/guideline_droite"
        app:layout_constraintTop_toBottomOf="@+id/brand" />

    <TextView
        android:id="@+id/quantites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="@id/guideline_droite"
        app:layout_constraintTop_toBottomOf="@+id/barres" />

    <TextView
        android:id="@+id/vendu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textSize="15dp"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="@id/guideline_droite"
        app:layout_constraintTop_toBottomOf="@+id/quantites" />

    <TextView
        android:id="@+id/ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="15dp"

        app:layout_constraintLeft_toLeftOf="@id/guideline_droite"
        app:layout_constraintTop_toBottomOf="@+id/vendu" />

    <TextView
        android:id="@+id/substance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="15dp"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="@id/guideline_droite"
        app:layout_constraintTop_toBottomOf="@+id/ingredient" />


    <TextView
        android:id="@+id/additfs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="15dp"
        android:textStyle="bold"

        app:layout_constraintLeft_toLeftOf="@id/guideline_droite"
        app:layout_constraintTop_toBottomOf="@+id/substance" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_droite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids=""
        app:barrierDirection="right" />



</androidx.constraintlayout.widget.ConstraintLayout>